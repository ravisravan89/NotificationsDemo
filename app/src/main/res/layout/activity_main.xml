<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:text="Simple Notification"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normal"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:text="Notification with action"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/waction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/action"
            android:text="Wearable Notificatoin Action"
            android:textColor="#ff852b" />


        <Button
            android:id="@+id/bigtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/waction"
            android:text="BigText Style Notification"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/wearableextend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/bigtext"
            android:text="Wearable Extender Notification"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/voiceinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/wearableextend"
            android:text="Notification to receive voice I/P"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/voiceinput"
            android:text="Notification With Pages"
            android:textColor="#ff852b" />

        <Button
            android:id="@+id/stacking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#123456"
            android:onClick="triggerButtonPress"
            android:layout_below="@+id/pages"
            android:text="Stacking Notifications"
            android:textColor="#ff852b" />

    </RelativeLayout>
</ScrollView>